{
  "trailingComma": "all",
  "singleQuote": false,
  "semi": true,
  "importOrder": [
    "next/(.*)$",
    "^react$",
    "^react-dom$",
    "^@fortawesome/(.*)$",
    "^@/configurations/(.*)$",
    "^@/components/(.*)$",
    "^@/contents/(.*)$",
    "^@/contexts/(.*)$",
    "^@/models/(.*)$",
    "^@/utils/(.*)$",
    "^@/assets/(.*)$",
    "^[./]"
  ],
  "importOrderSortSpecifiers": true,
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@trivago/prettier-plugin-sort-imports"
  ],
  "pluginSearchDirs": false
}
